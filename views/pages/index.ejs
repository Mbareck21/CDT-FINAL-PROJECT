<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head'); %>
  </head>
  <body class="container">
    <header class="hdr"><%- include('../partials/header'); %></header>

    <main>
      <div class="jumbotron">
        <% messages.forEach((msg) =>{ %>
        <p class="msg"><%= msg %></p>
        <% }) %> <% if (currentUser) {%>
        <h5>Hey <b><%= currentUser.name %></b>!</h5>
